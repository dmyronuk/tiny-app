<div id="top-bar">
  <div id = "login-info">
    <% if(user_id){%>
      Signed in as <%= user_id %>
    <% } %>
  </div>

  <div id="title-container">
    <a class="white-link" href="/urls" >TinyApp</a>
  </div>

  <div id="login-form-container">
    <% if(user_id){%>
      <form id="logout-form" action="/logout" method="post">
        <label for="username" aria-label="username"></label>
          <input type="hidden" name="username" value="<%= user_id %>">
          <input id="logout-button" class="styled-button" type="submit" value="Logout">
      </form>
    <% }else{ %>
      <form id="login-form" action="/login" method="post">
        <label for="username" aria-label="username"></label>
          <input type="text" name="username" placeholder="username">
          <input id="login-button" class="styled-button" type="submit" value="Login">
      </form>
    <% } %>
  </div>
</div>
<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head %>
  </head>
  <body>
    <% include ./partials/_header.ejs %>

    <div id="main-container-mid">
      <% if( username ){ %>
        Please logout before creating a new account
      <% } else { %>
        <form action="/register" method="POST">
          <div id="sign-up">
            Sign Up
          </div>
          <label for="username" aria-label="username"></label>
          <input id="username" class="block-input-field" type="text" name="username" placeholder="username">
          <label for="password" aria-label="password"></label>
          <input id="password" class="block-input-field" type="password" name="password" placeholder="password">
          <input type="submit" id="register-button" class="styled-button" value="Register">
        </form>
      <% } %>
    </div>
  </body>
</html>
